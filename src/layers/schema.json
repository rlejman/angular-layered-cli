{
    "$schema": "http://json-schema.org/schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "~ Layer name",
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "Who do we want to greet?"
        },
        "path": {
            "type": "string",
            "format": "path",
            "description": "The path to create the service.",
            "visible": false
        },
        "project": {
            "type": "string",
            "description": "The name of the project.",
            "$default": {
                "$source": "projectName"
            }
        }
    },
    "required": [
        "name"
    ]
}